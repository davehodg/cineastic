
DROP TABLE IF EXISTS user;
CREATE TABLE user (
       user_id   INT NOT NULL AUTO_INCREMENT,
       email	 varchar(255),
       password  char(40),		# md5_base64
       token	 varchar(128),
       firstname char(16),
       lastname  char(16),
       fb_id	 int,
       PRIMARY KEY (user_id),
       key token (token),
       key fb_id (fb_id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

# this didnt work inside the create table!
 alter table user add unique(email) ;


